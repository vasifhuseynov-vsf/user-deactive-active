@model UserViewModel

@{
    ViewData["Title"] = "ChangeRole";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>İstifadəçi adı</th>
                                    <th>Email</th>
                                    <th>Hazırki rol</th>
                                    <th>Diger rollar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.UserName</td>
                                    <td>@Model.Email</td>
                                    <td>@Model.Role</td>
                                    <td>
                                        <form method="post" asp-area="Admin" asp-controller="User" asp-action="ChangeRolePost" asp-route-id="@Model.Id">

                                            @for (int i = 0; i < Model.Roles.Length; i++)
                                            {
                                                if (Model.Role != Model.Roles[i])
                                                {
                                                    <input hidden name="RoleName" value="@Model.Roles[i]" />
                                                    <button class="btn btn-primary mb-3" type="submit">@Model.Roles[i]</button>
                                                    @*<a class="btn btn-primary" asp-controller="User" asp-action="ChangeRole" asp-route-id="@Model.Id">@Model.Roles[i]</a>*@
                                                }
                                            }
                                        </form>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



