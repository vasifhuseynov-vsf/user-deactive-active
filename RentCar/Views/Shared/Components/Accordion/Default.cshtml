@model AccordionViewModel

<div class="accordion">
    <div class="accordion-item">
        <div class="accordion-item-header" onmousedown="bleep.play()">
            <h1>
                Axtarış et
            </h1>
        </div>
        <div class="accordion-item-body">
            <div class="accordion-item-body-content">
                <form method="post" asp-action="SearchCar" asp-controller="Home">

                    <!-- select -->
                    <div class="search__select">

                        <select name="CarBrandName" id="car-brand-select" class="select__brand">
                            <option value="0">Marka seç:</option>
                            @foreach (var car in Model.Cars)
                            {
                                <option value="@car.BrandName">@car.BrandName</option>
                            }
                        </select>

                        <select name="CarModelName" id="car-model-select" class="select__model">
                            <option value="0">Model seç:</option>
                            @foreach (var carModel in Model.CarModels)
                            {
                                <option value="@carModel.ModelName"> @carModel.ModelName </option>
                            }
                        </select>

                        <select name="CityName" class="select__city">
                            <option value="0">Şəhər seç:</option>
                            @foreach (var city in Model.Cities)
                            {
                                <option value="@city.Name">@city.Name</option>
                            }
                        </select>

                        <!-- start date -->
                        <label for="start">Başlanğıc:</label>

                        <input name="StartDate" type="date" id="start">

                        <!-- end date -->
                        <label for="end">Son:</label>

                        <input name="EndDate" type="date" id="end">

                        <!-- price input -->
                        <label for="minPrice">Min:</label>
                        <input type="number" id="minPrice" name="MinPrice" min="0">
                        <span>₼</span><br> <br> <br>

                        <label for="maxPrice">Maks:</label>
                        <input type="number" id="maxPrice" name="MaxPrice" min="10">
                        <span>₼</span>

                    </div>

                    <!-- submit button -->
                    <div class="submit">
                        <button class="btn" type="submit" value="submit">Axtar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>